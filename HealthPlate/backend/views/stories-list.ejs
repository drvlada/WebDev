<%- include('layout', { body: `
  <h2>Stories</h2>

  <p>
    <a href="/admin/stories/new" class="btn">+ Add Story</a>
  </p>

  <table>
    <thead>
      <tr>
        <th>ID</th>
        <th>Title</th>
        <th>Slug</th>
        <th>Date</th>
        <th>Featured</th>
        <th>Actions</th>
      </tr>
    </thead>
    <tbody>
      ${stories.map(s => `
        <tr>
          <td>${s.id}</td>
          <td>${s.title}</td>
          <td>${s.slug}</td>
          <td>${s.date}</td>
          <td>${s.featured ? 'â˜…' : ''}</td>
          <td>
            <a class="btn secondary" href="/admin/stories/${s.id}/edit">Edit</a>
            <form method="post" action="/admin/stories/${s.id}/delete" style="display:inline;">
              <button class="btn danger">Delete</button>
            </form>
          </td>
        </tr>
      `).join('')}
    </tbody>
  </table>
` }) %>
